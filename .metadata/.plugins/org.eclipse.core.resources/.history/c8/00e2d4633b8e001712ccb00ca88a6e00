#include "DataFrame.h"


void AppendPayLoad(PayLoad* payload,const char* data){

	strcat(payload->Data,data);
	payload->Length = strlen(payload->Data);
}
//------------------------------------------------------------------------

int getNumField(char* str,const char a_delim) {

	uint16 i,f;

	i		= 0;
	f		= 0;

	while((str[i]!='\0') && (i<LEN_PAYLOAD)){

		if(str[i++]==a_delim){

			f++;
		}
	}

	return f+1;
}
//------------------------------------------------------------------------
