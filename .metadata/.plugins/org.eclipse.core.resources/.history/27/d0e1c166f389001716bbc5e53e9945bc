#include "DataTLM.h"
#include "AppQueues.h"
#include "MMA8451.h"
#include "Accelerometer.h"

static DataTLM	acceInfo;
DataTLM*	pAcceInfo = &acceInfo;

void runAccelerometer(void) {

	MMA8451_Run();

//	MMA1_GetRaw8XYZ(&pAcceInfo->Acc[0]);

	pAcceInfo->Axis[AXIS_X]	= 20;
	pAcceInfo->Axis[AXIS_Y]	= 21;
	pAcceInfo->Axis[AXIS_Z]	= 22;

	pAcceInfo->G[AXIS_X]	= 30;
	pAcceInfo->G[AXIS_Y]	= 31;
	pAcceInfo->G[AXIS_Z]	= 32;

    if(xQueueSendToBack( xQueueDataTLM , ( void * ) &pAcceInfo, ( TickType_t ) 1 ) ){

    	xTaskNotify( xHandleCallBackTask , BIT_UPDATE_ACCE , eSetBits );
    }
}
//------------------------------------------------------------------------

void initAccel(void){

	clearDataTLM(pAcceInfo);
	initMMA8451();
}
//------------------------------------------------------------------------
